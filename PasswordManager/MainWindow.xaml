<Window x:Class="PasswordManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="Pasword Manager" Height="450" Width="800"
        MaxHeight="450" MaxWidth="800"
        MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        
        <!--!Column 1-->
        
        <!--!The login username entry-->
        <!--x store the username-->
        <TextBlock Text="Username" 
                   Margin="300 50 300 325"
                   TextAlignment="Center"/>

        
        <TextBox x:Name="usernameInput" 
                 Margin="300 75 300 315"/>

        

        <!--!The login password entry-->
        <!--xtodo store the password-->
        <TextBlock Text="Password" 
                   Margin="300 125 300 275"
                   TextAlignment="Center"/>

        <TextBox x:Name="passwordInput" 
                 Margin="300 150 300 240"/>

        <!--!The button that collects everything for login-->
        <Button x:Name="loginInfoBut"
                Content="Login"
                Margin="200 225 450 160"
                Click="loginInfoBut_Click"/>

        <!--!Column 1-->
        
        

        <!--!The button that collects everything for login-->
        <Button x:Name="signUpInfoBut"
                Content="Sign Up"
                Margin="450 225 200 160"
                Click="signUpInfoBut_Click"/>

        <!--!Column 2-->

    </Grid>
</Window>
