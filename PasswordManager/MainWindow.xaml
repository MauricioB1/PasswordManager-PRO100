<Window x:Class="PasswordManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <!--!The username entry-->
        <!--todo store the username-->
        <TextBlock Text="Username" Grid.Row="0" 
                   Margin="350 50 350 125"
                   TextAlignment="Center"/>

        
        <TextBox x:Name="usernameInput" Grid.Row="0"
                 Margin="350 100 350 75"/>

        

        <!--!The password entry-->
        <!--todo store the password-->
        <TextBlock Text="Password" Grid.Row="1" 
                   Margin="350 25 350 150"
                   TextAlignment="Center"/>

        <TextBox x:Name="passwordInput" Grid.Row="1"
                 Margin="350 75 350 100"/>

        <Button x:Name="infoBut"
                Content="Enter"
                Grid.Row="1"
                Margin="350 150 350 25"
                Click="InfoBut_Click"/>


    </Grid>
</Window>
